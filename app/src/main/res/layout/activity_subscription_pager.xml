<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_header_background">

        <ImageView
            android:id="@+id/cloud"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:src="@drawable/ic_clouds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lucida_calligraphy_italic"
            android:gravity="center_horizontal"
            android:text="Access Our Full\n(Contents/Videos)"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cloud" />

        <ImageView
            android:id="@+id/get_subscription"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/payment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/days30"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:background="@drawable/button_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 Days\n1500rs"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/days90"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/button_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31-May-2021\n3000rs"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/days90Renew"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:background="@drawable/button_white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31-May-2021\n1500rs"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Get Subscription"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_rocekt"/>
</RelativeLayout>

